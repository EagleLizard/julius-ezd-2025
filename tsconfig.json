
{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": [
      "ESNext" // for Array.toSorted
    ],
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "sourceMap": true,
    // "skipLibCheck": true // needed for vitest because of rollup4
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "./dist",
    "./node_modules"
  ]
}
